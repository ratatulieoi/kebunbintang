<%- include ('../partials/header') %>

<style>
    .detail-container {
        padding: 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .detail-image {
        width: 100%;
        max-height: 1000px;
        object-fit: cover;
        border-radius: 15px;
    }

    .detail-info {
        margin-top: 2rem;
    }

    .kategori-badge {
        background: #4a90e2;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        display: inline-block;
        margin-bottom: 1rem;
    }

    .back-button {
        margin-bottom: 1rem;
        display: inline-block;
        padding: 0.5rem 1rem;
        background: #333;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: background 0.3s ease;
    }

    .back-button:hover {
        background: #555;
        color: white;
    }
</style>

<div class="detail-container">
    <a href="/" class="back-button">‚Üê Kembali</a>
    
    <div class="row">
        <div class="col-md-6">
            <img src="/images/<%= objek.image %>" alt="<%= objek.nama_objek %>" class="detail-image">
        </div>
        <div class="col-md-6 detail-info">
            <span class="kategori-badge"><%= objek.nama_kategori %></span>
            <h1><%= objek.nama_objek %></h1>
            <p class="text-muted"><%= objek.deskripsi %></p>
            <div class="mt-4">
                <h4>Tentang Kategori</h4>
                <p><%= objek.deskripsi_kategori %></p>
            </div>
        </div>
    </div>
</div>

<%- include ('../partials/footer') %>